<h1>Listing businesses</h1>

<table>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Description</th>
    <th>Video url</th>
    <th>Photo url</th>
    <th>Funding target</th>
    <th>Attachment url</th>
    <th>Votes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @businesses.each do |business| %>
  <tr>
    <td><%= business.user_id %></td>
    <td><%= business.title %></td>
    <td><%= business.description %></td>
    <td><%= business.video_url %></td>
    <td><%= business.photo_url %></td>
    <td><%= business.funding_target %></td>
    <td><%= business.attachment_url %></td>
    <td><%= business.votes %></td>
    <td><%= link_to 'Show', business %></td>
    <td><%= link_to 'Edit', edit_business_path(business) %></td>
    <td><%= link_to 'Destroy', business, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

